<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >

    <TextView
        android:id="@+id/product"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:paddingLeft="10dip"
        android:background="@color/custom_tab_selected_color"
        android:gravity="center_vertical"
        android:textIsSelectable="false" 
        android:textColor="@color/basic_widget_background_color"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/qty"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:paddingLeft="10dip"
        android:background="@drawable/basic_widget_background"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:layout_alignParentRight="true"
        android:textColor="@color/app_theme_base_text_color" 
        android:hint="@string/zero"
        android:textSize="18sp"/>

</RelativeLayout>